.construction(id="construction")
  .container
    .construction__title.d-fz-70.mob-fz-32.color-green.text-uppercase(data-split-lines) Хід будівництва
    .construction__subtitle.color-green-2.d-fz-32.mob-fz-21(data-split-lines) Прогрес робіт
    .construction__filter
      select.select(data-lenis-prevent)
        option(value="1") Будинок. 2 - 4 кв. 2025 р.
        option(value="2") Будинок. 2 - 4 кв. 2026 р.
        option(value="3") Будинок. 2 - 4 кв. 2027 р.
      select.select(data-lenis-prevent)
        option(value="1") 2 Черга
        option(value="2") 3 Черга
        option(value="3") 4 Черга
    .construction__table.color-darkblue.default-font2.color-white-2
      .construction__table-group.mob-fz-12.d-fz-14
        div Дата оновлення (12.03.2025)
        div Дата планового завершення будівництва (20.05.2027)
      .construction__table-group(data-construction-table-group)
        .d-fz-18.construction__table-title.mob-fz-16(data-construction-table-group-open)
          span Статус будівництва
          .show-on-mobile
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
              <path d="M1.69999 3.71289L4.41665 6.42956C4.73749 6.75039 5.26249 6.75039 5.58332 6.42956L8.29999 3.71289" stroke="#F2FFE6" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Будівництво
          .construction__progress-item-progress(style="--progress: 31%;")
            div 31%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Фундмент
          .construction__progress-item-progress(style="--progress: 100%;")
            div 100%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Каркас підземна частина
          .construction__progress-item-progress(style="--progress: 47%;")
            div 47%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Каркас наземна частина
          .construction__progress-item-progress(style="--progress: 42%;")
            div 42%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Покрівля
          .construction__progress-item-progress(style="--progress: 18%;")
            div 18%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Фасадні роботи
          .construction__progress-item-progress(style="--progress: 4%;")
            div 4%
            .construction__progress-item-progress-bar 
      .construction__table-group(data-construction-table-group)
        .d-fz-18.construction__table-title.mob-fz-16(data-construction-table-group-open)
          span Оздоблювальні роботи
          .show-on-mobile
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
              <path d="M1.69999 3.71289L4.41665 6.42956C4.73749 6.75039 5.26249 6.75039 5.58332 6.42956L8.29999 3.71289" stroke="#F2FFE6" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Зовнішні стіни та перегородки
          .construction__progress-item-progress(style="--progress: 15%;")
            div 15%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Двері
          .construction__progress-item-progress(style="--progress: 0%;")
            div 0%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Вікна
          .construction__progress-item-progress(style="--progress: 7%;")
            div 7%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Радіатори
          .construction__progress-item-progress(style="--progress: 4%;")
            div 4%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Ліфти
          .construction__progress-item-progress(style="--progress: 2%;")
            div 2%
            .construction__progress-item-progress-bar 
      .construction__table-group(data-construction-table-group)
        .d-fz-18.construction__table-title.mob-fz-16(data-construction-table-group-open)
          span Благоустрій
          .show-on-mobile
              <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
                <path d="M1.69999 3.71289L4.41665 6.42956C4.73749 6.75039 5.26249 6.75039 5.58332 6.42956L8.29999 3.71289" stroke="#F2FFE6" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
        .construction__progress-item.d-fz-14
          .construction__progress-item-title МЗК
          .construction__progress-item-progress(style="--progress: 42%;")
            div 42%
            .construction__progress-item-progress-bar 
        .construction__progress-item.d-fz-14
          .construction__progress-item-title Благоустрій території
          .construction__progress-item-progress(style="--progress: 14%;")
            div 14%
            .construction__progress-item-progress-bar
    .construction__filter
      select.select(data-construction-filter="month" data-lenis-prevent)
        option(value="1") Січень
        option(value="2") Лютий
        option(value="3") Березень
        option(value="4") Квітень
        option(value="5") Травень
        option(value="6") Червень
        option(value="7") Липень
        option(value="8") Серпень
        option(value="9") Вересень
        option(value="10") Жовтень
        option(value="11") Листопад
        option(value="12") Грудень
      select.select(data-construction-filter="year" data-lenis-prevent)
        option(value="2024") 2024
        option(value="2023") 2023
        option(value="2022") 2022
    .construction__slider.swiper-container(data-construction-slider)
      .swiper-wrapper
        each val in [1,2,3,4,5,6]
          .swiper-slide.construction-card(data-construction-card data-year="2024" data-month=val)
            .construction-card__top 12.#{val}.2024
            .construction-card__image
              .construction-card__image-wrap
                if val%2 === 0
                  .construction-card__video-play(data-popup-video="https://www.youtube.com/embed/dQw4w9WgXcQ")
