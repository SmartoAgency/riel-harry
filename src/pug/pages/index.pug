                  <path d="M4 12.0601H14.17" stroke="#031915" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 4C16.42 4 20 7 20 12C20 17 16.42 20 12 20" stroke="#031915" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>

            .swiper-wrapper
              each val in plannings
                .flat-card.swiper-slide
                  .flat-card__img
                    .flat-card__img-wrap
                      img(src=val.img, alt="", srcset="" loading="lazy")
                  div.flat-card__top1.d-fz-21.mob-fz-18.default-font2 #{val.title}
                  div.flat-card__top2.d-fz-16 від #{val.area}м²
                  .flat-card__bottom
                    div.d-fz-14.line-h-150.mob-fz-14 Ціна від
                    div.d-fz-24.line-h-150.mob-fz-21 $ #{val.price} 
                  button(type="button" data-popup-form-planning-open data-plannings-popup-checkbox=val.dataset).button2.default-font2
                    span Детальніше
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15" fill="none">
                      <path d="M5.72083 2.88012L9.52416 6.68345C9.97333 7.13262 9.97333 7.86762 9.52416 8.31678L5.72083 12.1201" stroke="#072D2B" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
          button(type="button" data-popup-form-planning-open).button
            span Підібрати помешкання
