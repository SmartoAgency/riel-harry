                <path d="M29.25 36.0001V32.4C29.25 27.78 32.52 25.8901 36.51 28.2001L39.63 30.0001L42.75 31.8C46.74 34.11 46.74 37.8901 42.75 40.2001L39.63 42.0001L36.51 43.8C32.52 46.11 29.25 44.2201 29.25 39.6001V36.0001Z" fill="white" fill-opacity="0.24" stroke="white" stroke-width="3" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              video(controls playsinline src="https://forest-2-wp.smarto.agency/wp-content/uploads/2025/03/home-video.mp4" poster="./assets/images/about-poster.jpg" data-video="about-video")
    .plannings(id="plannings")
      .container
        .plannings__content
          .plannings__title.color-green.d-fz-62.mob-fz-32.text-uppercase 
            div(data-split-lines) Оберіть Характер 
            div(data-split-lines) життя
          .swiper-container(data-plannings-slider)
            .show-on-mobile.slider-navigation
              button(type="button" data-plannings-slider-prev).slider-navigation__button
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12.3198 9.38L9.75982 11.94L12.3198 14.5" stroke="#031915" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M20 11.9399L9.83 11.9399" stroke="#031915" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 20C7.58 20 4 17 4 12C4 7 7.58 4 12 4" stroke="#031915" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
